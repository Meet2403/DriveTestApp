<!DOCTYPE html>
<html lang="en">
<%- include('layout/head'); -%>

    <body class="d-flex flex-column">
        <main class="flex-shrink-0">
            <!-- Navigation-->
            <%- include('layout/navigation'); -%>
                <!-- Page content-->

                <section class="py-5">
                    <div class="container px-5">
                        <div class="bg-light rounded-3 py-5 px-4 px-md-5 mb-5">
                            <div class="row gx-5 justify-content-center">
                                <div class="col-lg-8 col-xl-6">
                                    <% if (typeof userId=='string' && userId){ %>
                                        <form id="appointmentForm" action="/addAppointment" method="POST">
                                            <div class="text-center mb-5">
                                                <h1 class="fw-bolder">Add Appointment</h1>
                                            </div>
                                            <div class="text-center mb-5">
                                                <% if(typeof errors=='object' && errors !=null && errors.length> 0){ %>
                                                    <% for (var i=0; i < errors.length; i++) { %>
                                                        <h3>
                                                            <%=errors[i] %>
                                                        </h3>
                                                        <% } %>
                                                            <% } %>
                                            </div>
                                            <div class="text-center mb-5">
                                                <% if(typeof message=='string' && message !=null){ %>
                                                    <h3>
                                                        <%=message %>
                                                    </h3>
                                                    <% } %>
                                            </div>
                                            <!-- Name input-->
                                            <div class="row g-2">
                                                <div class="col-md">
                                                    <div class="form-floating mb-3">
                                                        <input class="form-control" id="date" name="date" type="date" />
                                                        <label for="firstname">Date</label>
                                                    </div>
                                                </div>
                                                <div class="col-md">
                                                    <div class="form-floating mb-3">
                                                        <!-- <input class="form-control" id="time" name="time" type="text" />
                                                        <label for="lastname">Time</label> -->
                                                        <select id="time" class="dropdown-toggle form-control"
                                                            name="time" required>
                                                            <option value="08:00 AM">08:00 AM</option>
                                                            <option value="08:30 AM">08:30 AM</option>
                                                            <option value="09:00 AM">09:00 AM</option>
                                                            <option value="09:30 AM">09:30 AM</option>
                                                            <option value="10:00 AM">10:00 AM</option>
                                                            <option value="10:30 AM">10:30 AM</option>
                                                            <option value="11:00 AM">11:00 AM</option>
                                                            <option value="11:30 AM">11:30 AM</option>
                                                            <option value="12:00 PM">12:00 PM</option>
                                                            <option value="12:30 PM">12:30 PM</option>
                                                            <option value="01:00 PM">01:00 PM</option>
                                                            <option value="01:30 PM">01:30 PM</option>
                                                            <option value="02:00 PM">02:00 PM</option>

                                                        </select>
                                                    </div>
                                                </div>
                                                <div class="col-md">
                                                    <div class="d-grid"><button class="btn btn-primary btn-lg"
                                                            id="addAppointmentButton" type="submit">Add</button></div>
                                                </div>
                                            </div>
                                        </form>
                                        <% } %>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>
                <section class="">
                    <div class="container px-5">
                        <div class="bg-light rounded-3 py-5 px-4 px-md-5 mb-5">
                            <div class="row gx-5 justify-content-center">
                                <div class="col-lg-8 col-xl-6">
                                    <% if (typeof userId=='string' && userId && appointments){ %>
                                        <div class="text-center mb-5">
                                            <h1 class="fw-bolder">Added Appointments</h1>
                                        </div>
                                        <% for (var i=0; i < appointments.length; i++) { %>
                                            <div class="row g-2">
                                                <div class="col-md">
                                                    <div class="form-floating mb-3">
                                                        <input class="form-control" id="date" name="date" type="text"
                                                            value="<%= appointments[i].date %>" disabled />
                                                        <label for="firstname">Date</label>
                                                    </div>
                                                </div>
                                                <div class="col-md">
                                                    <div class="form-floating mb-3">
                                                        <input class="form-control" id="time" name="time" type="text"
                                                            value="<%= appointments[i].time %>" disabled />
                                                        <label for="lastname">Time</label>
                                                    </div>
                                                </div>
                                            </div>
                                            <% } %>
                                                <% } %>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>
        </main>
        <!-- Footer-->
        <%- include('layout/footer'); -%>
            <!-- Bootstrap core JS-->
            <!-- Core theme JS-->
            <%- include('layout/script'); -%>
    </body>

</html>